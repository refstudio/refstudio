{
  "name": "refstudio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "husky install",
    "dev": "vite",
    "build": "tsc && vite build",
    "fmt": "prettier --config package.json --write '**/*'",
    "pylint:check": "poetry run ruff check ./src-python",
    "pylint:fix": "poetry run ruff check --fix ./src-python",
    "lint:check": "eslint --ext .js,.ts,.tsx ./src",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx ./src",
    "preview": "vite preview",
    "python": "poetry run pyinstaller --onefile --noconfirm --hidden-import torch --collect-data torch --recursive-copy-metadata torch --hidden-import pyarrow --collect-data pyarrow --recursive-copy-metadata pyarrow --collect-binaries pyarrow --collect-submodules pyarrow --recursive-copy-metadata importlib_metadata --recursive-copy-metadata tqdm --recursive-copy-metadata sentence-transformers --distpath src-tauri/bin/python src-python/main.py && bash scripts/move_binary.sh",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:dev:debug": "DEV_TOOLS=1 tauri dev"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.2.0",
    "@tiptap/extension-code-block-lowlight": "^2.0.3",
    "@tiptap/extension-color": "^2.0.3",
    "@tiptap/extension-mention": "^2.0.3",
    "@tiptap/extension-text-style": "^2.0.3",
    "@tiptap/pm": "^2.0.3",
    "@tiptap/react": "^2.0.3",
    "@tiptap/starter-kit": "^2.0.3",
    "@tiptap/suggestion": "^2.0.3",
    "autoprefixer": "^10.4.14",
    "classnames": "^2.3.2",
    "lowlight": "^2.9.0",
    "postcss": "^8.4.23",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-drag-drop-files": "^2.3.10",
    "react-resizable-panels": "^0.0.42",
    "tailwindcss": "^3.3.2",
    "tiptap-markdown": "^0.7.2",
    "usehooks-ts": "^2.9.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.2.3",
    "@types/node": "^18.7.10",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitejs/plugin-react": "^3.0.0",
    "eslint": "^8.41.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "typescript": "^4.9.5",
    "vite": "^4.2.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --config package.json --write",
      "git add"
    ],
    "*.*": [
      "prettier --config package.json --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "overrides": []
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "react/react-in-jsx-scope": "off"
    },
    "settings": {
      "react": {
        "version": "18"
      }
    },
    "env": {
      "browser": true,
      "es2021": true
    }
  }
}
