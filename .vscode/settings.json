{
  "editor.rulers": [120],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.formatOnSave": true
  },
  "[postcss]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": [
    // Run ESLint fixers _before_ prettier to ensure the user doesn't need to do multiple saves
    "source.organizeImports",
    "source.fixAll.eslint",
    "source.fixAll.format",
  ],
  "explorer.excludeGitIgnore": true,
  "search.exclude": {
    ".yarn/**": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "workbench.colorCustomizations": {
    // vs code defaults are a bit loud / noisy
    // These are based on Reviewable with the opacity dialed down
    "diffEditor.insertedLineBackground": "#5bdc7211",
    "diffEditor.removedLineBackground": "#f05c5c11",
    "diffEditor.insertedTextBackground": "#5bdc7222",
    "diffEditor.removedTextBackground": "#f05c5c22",
  }
}
