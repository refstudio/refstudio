{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "refstudio",
    "version": "./../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "dialog": {
        "save": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPCONFIG", "$APPCONFIG/*", "$APPDATA/**", "$RESOURCE/**", "$HOME/**"]
      },
      "shell": {
        "all": true,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "call-sidecar",
            "cmd": "$RESOURCE/bin/python/main-aarch64-apple-darwin/main",
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "externalBin": [],
      "identifier": "studio.ref.desktop",
      "resources": ["bin/*"],
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "refstudio",
        "width": 1280,
        "height": 800,
        "maximized": true,
        "fileDropEnabled": false,
        "visible": false
      },
      {
        "width": 640,
        "height": 400,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen"
      }
    ]
  }
}
