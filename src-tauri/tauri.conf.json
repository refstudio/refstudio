{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "refstudio",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**"
        ]
      },
      "shell": {
        "all": true,
        "execute": true,
        "open": true,
        "sidecar": false
      }
    },
    "bundle": {
      "active": true,
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "externalBin": [],
      "identifier": "com.tauri.dev",
      "resources": [
        "bin/python/**"
      ],
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "refstudio",
        "width": 1280,
        "height": 800,
        "maximized": true,
        "fileDropEnabled": false
      }
    ]
  }
}
